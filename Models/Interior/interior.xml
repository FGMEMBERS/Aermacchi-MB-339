<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>inttourverriere</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </effect>
  
  <!-- Tableau de bord avant -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.65359 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.44133 </z-m>
      <pitch-deg> -18 </pitch-deg>
    </offsets>
  </model>
  
  <!-- Yoke -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Panel/Instruments/yokes/yoke.xml</path>
    <offsets>
      <x-m> -3.49 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -1.01 </z-m>
    </offsets>
  </model>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.08 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.62 </z-m>
    </offsets>
  </model>
  
  <!-- Pilot seat -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Seat/seat.xml</path>
    <offsets>
      <x-m> -3.11 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.63 </z-m>
    </offsets>
  </model>
  
  <!-- Tableau de bord arriÃ¨re -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Panel/panel2.xml</path>
    <offsets>
      <x-m> -2.14739 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.23532 </z-m>
      <pitch-deg> -18 </pitch-deg>
    </offsets>
  </model>
  
  <!-- Yoke -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Panel/Instruments/yokes/yoke.xml</path>
    <offsets>
      <x-m> -1.990 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.825 </z-m>
    </offsets>
  </model>

  <!-- Copilot -->  
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.57 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.40 </z-m>
    </offsets>
  </model>
  
  <!-- Copilot seat -->
  <model>
    <path>Aircraft/Aermacchi-MB-339/Models/Interior/Seat/seat.xml</path>
    <offsets>
      <x-m> -1.61 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.40 </z-m>
    </offsets>
  </model>
  
  <!-- Canopy -->
  <animation>
    <name>CanopyInterne</name>
    <object-name>intverriere</object-name>
    <object-name>inttourverriere</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>CanopyInterne</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>CanopyInterne</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -90 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.65914 </x1-m>
      <y1-m>  0.36375 </y1-m>
      <z1-m> -0.32780 </z1-m>
      <x2-m> -2.31242 </x2-m>
      <y2-m>  0.37292 </y2-m>
      <z2-m> -0.26390 </z2-m>
    </axis>
  </animation>

</PropertyList>
